export PATH="$PATH:/sbin"

DATABASE_PASSWORD=devstack
RABBIT_PASSWORD=devstack
SERVICE_TOKEN=devstack
SERVICE_PASSWORD=devstack
ADMIN_PASSWORD=devstack

LOGFILE=/opt/stack/logs/stack.sh.log
VERBOSE=True
LOG_COLOR=True
SCREEN_LOGDIR=/opt/stack/logs

# Workaround bug in devstack that
# prefers 'lo' over better options such as eth0.
#
# There also happens to be a bug with the docker driver
# and the use of 127.0.0.1:
# http://lists.openstack.org/pipermail/openstack-dev/2014-January/024383.html
HOST_IP_IFACE=eth0

IMAGE_URLS=

VIRT_DRIVER=docker

# Default to using Eric's private branch
# which has important fixes and, furthermore,
# still has docker available...
# -- this will be changed to using the stackforge
#    plugin, once it is better tested.
NOVA_BRANCH=docker-ci
NOVA_REPO=https://github.com/ewindisch/nova

# Include ".d" directory
for script in /devstack/localrc.d/*; do
    . $script
done
